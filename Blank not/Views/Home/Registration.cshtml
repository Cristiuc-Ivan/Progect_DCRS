@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/LayoutReg.cshtml";
}

    <div class="Regist_block">
        @Html.ActionLink("Go back", "Index", "Home", null)

        <form>
            <input class="nickname" type="text" id="nick" placeholder="Enter your nickname:" required />
            <input class="login" type="email" id="email" name="Email" placeholder="Enter Email:" required />
            <input class="password" type="password" id="password" name="password" placeholder="Enter Password:"
                   required />
            <input class="button" type="submit" value="Enter" />
        </form>
        <p class="Login">
            Already have account?
            @Html.ActionLink("Sign in", "Login", "Home", null);
        </p>
    </div>
