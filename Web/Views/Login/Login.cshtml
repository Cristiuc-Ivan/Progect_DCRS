@model Domain.LoginModel
@using Domain
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LayoutLog.cshtml";
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="Login_block">
        <a href="~/Home/Index">
            <img class="logo" alt="Logo" src="~/Content/images/logo.png" />
        </a>
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@

        @*@Html.LabelFor(model => model.UserLogin, htmlAttributes: new { @class = "text-info" })*@
        @Html.EditorFor(model => model.UserLogin, new { htmlAttributes = new { @class = "login", @id = "email" } })
        @Html.ValidationMessageFor(model => model.UserLogin, "", new { @class = "text-warning" })

        @*@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "password", @id = "password" })*@
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "password", @id = "password" } })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-warning" })

        <input class="button" type="submit" value="Enter" />

        <p class="Regist">
            Not registered yet?
            @Html.ActionLink("Log in", "Registration", "Login");
        </p>
    </div>
}
