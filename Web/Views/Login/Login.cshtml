@using Web.Models
@Model UserLogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LayoutLog.cshtml";
}

<h3 style="color:white">
    @ViewBag.Title<br />
    User:@Model.UserName<br />
    Password:@Model.Password<br />
    Anddd email:@Model.Email
</h3>
<div class="Login_block">
    <a href="~/Home/Index">
        <img class="logo" alt="Logo" src="~/Content/images/logo.png" />
    </a>
    <form>
        <input class="login" type="email" id="email" name="Email" placeholder="Enter Email:" required />
        <input class="password" type="password" id="password" name="password" placeholder="Enter Password:"
               required />
        <input class="button" type="submit" value="Enter" />
    </form>
    <p class="Regist">
        Not registered yet?
        @Html.ActionLink("Log in", "Registration", "Login");
    </p>
</div>
