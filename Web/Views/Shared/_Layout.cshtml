    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&display=swap" rel="stylesheet">

    @Styles.Render("~/bundles/bootstrap/css")
    @Styles.Render("~/bundles/genresStyles/css")
    @Styles.Render("~/bundles/mainStyle/css")
    @Styles.Render("~/bundles/stylinn/css")
    @Styles.Render("~/bundles/swiper/css")

    @Styles.Render("~/bundles/footer/css")

    @Styles.Render("~/bundles/forum/css")
    @if (User.Identity.IsAuthenticated)
    {
        @Styles.Render("~/bundles/header_aut/css")
    }
    else
    {
        @Styles.Render("~/bundles/header_neaut/css")
    }

</head>
<body>
    @Html.Partial("_Header")
    @RenderBody()
    @Html.Partial("_Footer")

    @Scripts.Render("~/bundles/bootstrap/js")
    @Scripts.Render("~/bundles/swiper-bundle/js")

    @Scripts.Render("~/bundles/addGenresTop/js")

    @if (ViewBag.Title == "Home")
    {
        @Scripts.Render("~/bundles/addUpcoming/js")
        @Scripts.Render("~/bundles/addTrending/js")
    }

    @Scripts.Render("~/bundles/swiper/js")
    @Scripts.Render("~/bundles/processForm/js")
    @Scripts.Render("~/bundles/vanilla-tilt/js")
    @Scripts.Render("~/bundles/forum_addactors/js")

</body>
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
