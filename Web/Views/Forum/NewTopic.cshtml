                    <div class="inputcontainer">
                        <div class="form-group">
                            <label for="topic">Topic:</label>
                            <input type="text" class="form-control" id="Topic" name="newTopic" placeholder="Give your topic a title:"
                                   required>
                        </div>
                        <div class="comment-group form-group">
                            <label for="comment">Comment:</label>
                            <textarea class="form-control" id="comment" rows="5" name="newReply" placeholder="Write your comment here:"
                                      required></textarea>
                        </div>

                        <div class="form-check-button">
